{% extends 'base_admin.html.twig' %}

{% block body %}

    <div class="container-fluid">
        <h1>Liste des tags</h1>

        <table class="table table-condensed">
            <thead>
            <tr>
                <th>Id</th>
                <th>Tag</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for tag in tags %}
                <tr>
                    <td><a href="{{ path('tag_show', { 'id': tag.id }) }}">{{ tag.id }}</a></td>
                    <td>{{ tag.tag }}</td>

                    <td>
                        <a href="{{ path('tag_edit', { 'id': tag.id }) }}" class="btn btn-default">
                            <span class="glyphicon glyphicon-pencil"></span> Modifier
                        </a>
                        <a href="{{ path('tag_delete', { 'id': tag.id }) }}" class="btn btn-default">
                            <span class="glyphicon glyphicon-trash"></span> Supprimer
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-default" href="{{ path('tag_new') }}" role="button">Cr√©er un nouveau tag</a>

    </div>
{% endblock %}
