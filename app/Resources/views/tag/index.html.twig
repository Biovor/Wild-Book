{% extends 'layout_admin.html.twig' %}

{% block content %}

    <div class="container-fluid">
        <h1>Lite des tags</h1>

        <table class="table table-condensed">
            <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for tag in tags %}
                <tr>
                    <td>{{ tag.id }}</td>
                    <td>{{ tag.tag }}</td>

                    <td>
                        <a href="{{ path('tag_edit', { 'id': tag.id }) }}" class="btn btn-default">
                            <span class="glyphicon glyphicon-pencil"></span> Modifier
                        </a>
                    </td>

                    <td>{{ render(controller('BookBundle:Tag:indexDelete', {'id': tag.id})) }}</td>

                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-default" href="{{ path('tag_new') }}" role="button">Cr√©er un tag</a>
    </div>
{% endblock %}
