{% extends 'layout_admin.html.twig' %}
{% form_theme edit_form 'bootstrap_3_layout.html.twig' %}

{% block content %}
    <div class="container-fluid">

        <h3>École : {{ school.school }}</h3>

        <div class="form-group">
            {{ form_start(edit_form) }}
            {{ form_label(edit_form.school,'Ecole') }}
            {{ form_widget(edit_form.school) }}
            {{ form_errors(edit_form.school) }}
            {{ form_label(edit_form.address,'Adresse') }}
            {{ form_widget(edit_form.address) }}
            {{ form_errors(edit_form.address) }}
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-default" value="Modifier"/>
        </div>
        {{ form_end(edit_form) }}

        <div class="form-group">
            {{ form_start(delete_form) }}
            <input type="submit" class="btn btn-default" value="Supprimer">
            {{ form_end(delete_form) }}
        </div>

        <div class="form-group">
            <a href="{{ path('school_index') }}" class="btn btn-default">Retour à la liste</a>
        </div>
    </div>
{% endblock %}
