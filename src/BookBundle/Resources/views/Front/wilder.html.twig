{% extends 'layout.html.twig' %}

{% block body %}

    <div class="container-fluid">

        <div class="container">

            <div class="row modjoProfilWilder">
                {{ wilder.modjo }}
            </div>

            <div class="row">
                <hr>
            </div>

            <div class="row">
                <div class="col-lg-6 imageProfilWilder">
                    <img src="{{ asset('uploads/'~ wilder.profilPicture|basename ) }}"
                         alt="{{ wilder.firstname }} {{ wilder.lastname }}">
                </div>
                <div class="col-lg-offset-1 col-lg-5">
                    <h3 class="firstnameWilder">{{ wilder.firstname }}</h3>
                    <h3 class="lastnameWilder">{{ wilder.lastname }}</h3>
                    <p class="promotionWilder">{{ wilder.promotion.school.school }}
                        / {{ wilder.promotion.promotion }}</p>
                    <p class="dispoWilder">{{ wilder.availability.label }}</p>
                    <p class="freelanceWilder">{{ wilder.freelanceAvailability ? 'accepte missions freelance' }}</p>
                    <p class="websiteWilder">{{ wilder.website }}</p>

                    <div class="socialProWilder">
                        <div class="iconsocial">
                            <a href="{{ wilder.linkedin }}"><i class=" fa fa-linkedin"></i></a>
                        </div>
                        <div class="iconsocial">
                            <a href="{{ wilder.github }}"><i class=" fa fa-github"></i></a>
                        </div>
                        <div class="iconsocial">
                            <a href="{{ asset('uploads/' ~ wilder.cv) }}"><i class=" fa fa-download"> Télécharger le
                                    CV</i></a>
                        </div>
                        <div class="iconsocial">
                            <a href="mailto:{{ wilder.contactEmail }}"><i class=" fa fa-envelope"></i></a>
                        </div>
                        <div class="iconsocial">
                            <a href=""><i class="fa fa-codepen"></i> {{ codewars }} Points</a>
                        </div>
                    </div>
                    <div class="socialPersoWilder">
                        <div class="iconsocial">
                            <a href="{{ wilder.twitter }}"><i class=" fa fa-twitter"></i></a>
                        </div>
                        <div class="iconsocial">
                            <a href="{{ wilder.facebook }}"><i class=" fa fa-facebook"></i></a>
                        </div>
                        <div class="iconsocial">
                            <a href="mailto:{{ wilder.contactEmail }}"><i class=" fa fa-envelope"></i></a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <hr>
            </div>

            <div class="row contentProfilWilder">
                <div class="col-md-3 contentProfilWilderLeft">
                    <div class="langagesWilder">
                        <h4>LANGAGES</h4>
                        <ul>{% for languages in wilder.languages %}
                                <li>{{ languages.language }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                    <div class="technologies">
                        <h4>TECHNOLOGIES</h4>
                        <ul>{% for technologies in wilder.technologies %}
                                <li>{{ technologies.technology }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                    <div class="competences">
                        <h4>COMPETENCES</h4>
                        <p>{{ wilder.skill }}</p>
                    </div>
                </div>
                <div class="col-md-8 col-md-offset-1 contentProfilWilderRight">
                    <div class="bio">
                        <p>{{ wilder.biography }}</p>
                    </div>
                </div>
            </div>

            <div class="row">
                <hr>
            </div>

            <div class="row imgProjectWilder">
                {% for projectsWilder in wilder.projectWilders %}
                    {% for picture in projectsWilder.project.pictures %}
                        {% if picture.isPrincipal == true %}
                            <img src="{{ asset('uploads/'~ picture.path|basename ) }}" class="imagePrincipaleProject"/>
                        {% endif %}
                    {% endfor %}
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
