{% extends 'layout.html.twig' %}

    {% block stylesheets %}
        {{ parent() }}
        <link rel="stylesheet" href="{{ asset('css/bootstrap-select.min.css') }}">
    {% endblock %}

{% block body %}

    <div class="container-fluid img1">
        <h1>LES WILDERS</h1>
    </div>

    <div class="container">

        <div class="sub-title">
            <h2>Trouver un wilder</h2>
        </div>

        <div class="search-area">
            <div class="search">
                <div class="row">
                    <div class="col-lg-12 blocksearch">
                        {{ form_start(form) }}
                        {{ form_errors(form) }}
                        <div class="row">
                            <div class="col-lg-2 col-lg-offset-1">
                                {{ form_row(form.school) }}
                            </div>
                            <div class="col-lg-2 col-lg-offset-1">
                                {{ form_row(form.language) }}
                            </div>
                            <div class="col-lg-2 col-lg-offset-1">
                                {{ form_row(form.promotion) }}
                            </div>
                            <div class="col-lg-2 col-lg-offset-1">
                                <button type="submit" class="btn btn-default btn-wcs">OK</button>
                            </div>
                        </div>
                        {{ form_end(form) }}


                        {{ form_start(form) }}
                        {{ form_row(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="list_wilders row" id="wild-list">
            {% for wilder  in wilders%}
                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 ">
                    <a href="{{ path('profile_wilder', { 'id': wilder.id }) }}" class="thumbnail">
                        <img src="{{ asset('uploads/'~ wilder.profilPicture ) }}" alt="">
                        <h4>{{ wilder.firstname }} {{ wilder.lastname }}</h4>
                    </a>
                </div>
            {% endfor %}
        </div>


            <div class="realisation-focus">
                <div class="sub-title-slider">
                    <h2>L'article du moment</h2>
                </div>

                <div class="sub-title-text">
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum id erat in est ultrices
                        tempus.
                        Aenean dignissim aliquet dui, eget ullamcorper enim laoreet nec.
                        Vestibulum fermentum mauris condimentum velit posuere, at fermentum libero malesuada</p>
                </div>

                <div class="slider">
                    <div id="carousel" class="carousel slide" data-ride="carousel">
                        <!-- Indicators -->
                        <ol class="carousel-indicators">
                            <li data-target="#carousel" data-slide-to="0" class="active"></li>
                            <li data-target="#carousel" data-slide-to="1"></li>
                            <li data-target="#carousel" data-slide-to="2"></li>
                        </ol>
                        <!-- Wrapper for slides -->
                        <div class="carousel-inner" role="listbox">
                            <div class="item active">
                                <img src="{{ asset('images/slider01.jpg') }}" class="img_project_carousel" alt="slider01">
                                <div class="carousel-caption">
                                </div>
                            </div>
                            <div class="item">
                                <img src="{{ asset('images/slider02.jpg') }}" class="img_project_carousel" alt="slider02">
                                <div class="carousel-caption">
                                </div>
                            </div>
                        </div>
                        <!-- Controls -->
                        <a class="left carousel-control" href="#carousel" role="button" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#carousel" role="button" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>


    </div>

    <div class="container-fluid img2">
    </div>


{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/ajax_auto.js') }}"></script>
    <script src="{{ asset('js/bootstrap-select.min.js') }}"></script>
{% endblock javascripts %}
